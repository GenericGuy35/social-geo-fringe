<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <title>@ViewBag.Title</title>

  @Styles.Render("~/bundles/styles")
</head>
<body>
  @Html.Action("Index", "MainNav", new { area = "", viewBag = ViewBag })
  <div class="container-fluid body-content">
    @RenderBody()
  </div>
    
  @RenderSection("scripts", required: false)
  <script type="text/javascript">
    // Apply globals.
    (function () {
      window.rootUrl = "@HttpUtility.JavaScriptStringEncode(Url.Content("~"))";
      window.scriptsRoot = window.rootUrl + "Scripts/";
      window.componentRoot = "ReactBone/";
      window.componentTag = "data-components";
    }());
  </script>
  <script type="text/javascript" data-main="@Url.Content("~/Scripts/ReactBone/main")" src="@Url.Content("~/Scripts/require.js")"></script>
</body>
</html>
