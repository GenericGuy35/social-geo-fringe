@model List<List<System.Web.UI.WebControls.MenuItem>>

@if (!(ViewBag.NavSection == null))
{
  <div class="navbar navbar-inverse mainNavTheme">
    <div class="navbar-inner">
      <div>
        <div class="navbar-header">
          <button class="navbar-toggle collapsed" type="button" data-toggle="collapse" data-target=".navbar-collapse">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar">-</span>
            <span class="icon-bar">-</span>
            <span class="icon-bar">-</span>
          </button>      
          <a class="navbar-brand" href="#">social-geo-fringe</a>    
        </div>
        <nav class="navbar-collapse collapse" role="navigation">
          <ul class="nav navbar-nav">
            @foreach (var menu in Model)
            {
              foreach (var menuItem in menu)
              {
                <li class="@(ViewBag.NavSection == menuItem.Text ? "active" : null) primaryGradient">
                  <a class="primaryGradient" href="@Href(menuItem.NavigateUrl)" id="@(menuItem.Value)Link">@menuItem.Text</a>
                </li>
              }
              if (menu != Model.Last())
              {
                <li class="separator primaryGradient">
                  <div>|</div>
                </li>
              }
            }
          </ul>
        </nav>
      </div>
    </div>
  </div>
}